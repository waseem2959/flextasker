  "shortcuts": [
    {
      "name": "Browse Tasks",
      "short_name": "Tasks",
      "description": "View available tasks",
      "url": "/tasks",
      "icons": [{ "src": "/icons/tasks.png", "sizes": "192x192" }]
    },
    {
      "name": "Create New Task",
      "short_name": "New Task",
      "description": "Post a new task",
      "url": "/post-task",
      "icons": [{ "src": "/icons/create.png", "sizes": "192x192" }]
    },
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View your dashboard",
      "url": "/dashboard",
      "icons": [{ "src": "/icons/dashboard.png", "sizes": "192x192" }]
    },
    {
      "name": "Messages",
      "short_name": "Messages",
      "description": "Check your messages",
      "url": "/messages",
      "icons": [{ "src": "/icons/messages.png", "sizes": "192x192" }]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "categories": ["productivity", "utilities", "business"],
  "screenshots": [
    {
      "src": "/screenshots/homepage.jpg",
      "sizes": "1280x720",
      "type": "image/jpeg"
    },
    {
      "src": "/screenshots/tasks.jpg",
      "sizes": "1280x720",
      "type": "image/jpeg"
    },
    {
      "src": "/screenshots/task-detail.jpg",
      "sizes": "1280x720",
      "type": "image/jpeg"
    },
    {
      "src": "/screenshots/profile.jpg",
      "sizes": "1280x720",
      "type": "image/jpeg"
    }
  ],
  "dir": "ltr",
  "lang": "en-US",
  "scope": "/",
  "iarc_rating_id": "",
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "description",
      "url": "link",
      "files": [
        {
          "name": "attachments",
          "accept": ["image/*", "application/pdf"]
        }
      ]
    }
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "protocol_handlers": [
    {
      "protocol": "web+flextasker",
      "url": "/task?taskId=%s"
    }
  ],
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "auto"
  },
  "widgets": [
    {
      "name": "Quick Task",
      "short_name": "Quick Task",
      "description": "Quickly post a new task",
      "tag": "quick-task",
      "template": "quick-task-template",
      "ms_ac_template": "adaptive-card.json",
      "data": "/widgets/quick-task/data",
      "type": "application/json",
      "screenshot": {
        "src": "/screenshots/widget-quick-task.jpg",
        "sizes": "400x200",
        "label": "Quick task widget"
      },
      "icons": [
        {
          "src": "/icons/widget-quick-task.png",
          "sizes": "256x256"
        }
      ],
      "auth": false,
      "update": 86400
    }
  ]
}
